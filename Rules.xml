<Rules>
    <Rule id="where">
        <Question>Where would you like to use mostly your car? (1 = highway, 2 = in the city, 3 = offroad)</Question>
        <Answer>
            <Selection value="true">
                <MultipleValue>1,2</MultipleValue>
            </Selection>
            <Selection value="false">
                <MultipleValue>3</MultipleValue>
            </Selection>
        </Answer>
    </Rule>
